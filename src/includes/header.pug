mixin link(title)
    - const href = title === "Home" ? "./index.pug" : `./${title.toLowerCase()}.pug`;
    li.links__item: a(href=href) #{title}
header.nav
    .nav__toggle
        include ../img/icons/list.svg
    a.nav__logo(href="/")
        include ../img/logo/dark-mono.svg
    .nav__blank
    ul.links
        +link("Home")
        +link("Discover")
        +link("Saved")
        +link("Upload")