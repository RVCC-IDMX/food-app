{
  "name": "tastebase",
  "version": "1.0.0",
  "description": "A recipe app made for the IDMX 297 Capstone course.",
  "dependencies": {
    "pug": "^3.0.2",
    "sass": "^1.49.9"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.3.2",
    "@parcel/transformer-image": "^2.3.2",
